{
  "openapi": "3.0.3",
  "info": {
    "title": "Conversor de documentos para PDF",
    "description": "Serviço REST para conversão de documentos suportados pelo LibreOffice Writer (ex: .docx, .odt, .doc, .rtf) para PDF. \n\n**Atenção**: O serviço aceita qualquer binário, mas a conversão só funcionará se o formato for compatível com o LibreOffice Writer.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Ambiente local"
    }
  ],
  "paths": {
    "/convert": {
      "post": {
        "summary": "Converte um documento para PDF",
        "description": "Envia um arquivo binário e recebe o PDF convertido.\nO tipo de arquivo deve ser indicado via cabeçalho `X-File-Extension`.",
        "operationId": "convertToPdf",
        "parameters": [
          {
            "name": "X-File-Extension",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "example": "docx"
            },
            "description": "Extensão do arquivo de entrada (ex: `docx`, `odt`, `rtf`).\nUsada para nomear o arquivo temporário e permitir que o componente detecte o formato corretamente.\nSe nada for informado, a extensão docx é usada."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/octet-stream": {
              "schema": {
                "type": "string",
                "format": "binary"
              },
              "examples": {
                "docxFile": {
                  "summary": "Arquivo a ser convertido",
                  "value": "Binário do arquivo .docx"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Arquivo PDF convertido com sucesso",
            "content": {
              "application/pdf": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida (ex: corpo vazio)",
            "content": {
              "application/json": {
                "schema":  {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 400
                    },
                    "message": {
                      "type": "string",
                      "example": "Erro ao ler o arquivo de entrada."
                    },
                    "details": {
                      "type": "string",
                      "example": "Detalhes da exceção lançada"
                    }
                  },
                  "required": ["code", "message"]
                }
              }
            }
          },
          "405": {
            "description": "Método não permitido (somente POST)",
            "content": {
              "application/json": {
                "schema":  {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 405
                    },
                    "message": {
                      "type": "string",
                      "example": "Somente o método POST é aceito."
                    }
                  },
                  "required": ["code", "message"]
                }
              }
            }
          },
          "500": {
            "description": "Erro interno durante a conversão (ex: formato não suportado, erro de IO, etc)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 500
                    },
                    "message": {
                      "type": "string",
                      "example": "Falha na conversão."
                    },
                    "details": {
                      "type": "string",
                      "example": "Detalhes da exceção lançada"
                    }
                  },
                  "required": ["code", "message"]
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Verifica se o serviço está saudável",
        "operationId": "healthCheck",
        "responses": {
          "200": {
            "description": "Serviço está OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "OK"
                }
              }
            }
          }
        }
      }
    },
    "/swagger" : {
      "get": {
        "summary": "Retorna a especificação Swagger/OpenAPI do serviço",
        "operationId": "getSwaggerSpec",
        "responses": {
          "200": {
            "description": "Especificação Swagger em JSON (esta documentação)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}